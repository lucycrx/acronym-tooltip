{
  "manifest_version": 3,
  "name": "Acronym Tooltip",
  "description": "Hover over acronyms on Meta internal sites to see WUT definitions and AI-generated explanations",
  "version": "1.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.workplace.com/*",
        "*://*.internalfb.com/*",
        "*://*.facebook.com/*",
        "*://*.meta.com/*"
      ],
      "js": [
        "content/detector.js",
        "content/context.js",
        "content/dismiss.js",
        "content/wut-lookup.js",
        "content/tooltip.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "options_page": "options/options.html",
  "host_permissions": [
    "*://*.workplace.com/*",
    "*://*.internalfb.com/*",
    "*://*.facebook.com/*",
    "*://*.meta.com/*",
    "https://api.wearables-ape.io/*"
  ]
}
